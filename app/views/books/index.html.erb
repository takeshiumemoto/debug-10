<body class="d-flex flex-column vh-100">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info' %>
         <%= render 'book_form',book:@book%>
         </div>
       
<!--投稿一覧-->
<div class="col-md-8 offset-md-1">       
  <h1 class="font-weight-bold">Books</h1>
 <%= link_to '新しい順', books_path(latest: "true") %>
|<%= link_to '古い順', books_path(old: "true") %>
|<%= link_to '評価の高い順', books_path(star_count: "true") %>
<table class="table">
  <tr>
    <th></th>
    <th class="font-weight-bold">Title</th>
  　 <th class="font-weight-bold">Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
      <%= link_to user_path(book.user), :class => "user-profile-link" do %>
        <%= image_tag book.user.get_image,width: 100, height: 100  %></td>
      <% end %>
      </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
            <td><%= render 'static_rate',book:book%></td>
    </tr>
  <% end %>
</table>
    </div>
   </div>
  </div>
</body>